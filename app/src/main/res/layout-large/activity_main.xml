<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.univr.francesco.flickr.view.MainActivity">

    <it.univr.francesco.flickr.view.TabletView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <fragment
            android:id="@+id/master_fragment"
            android:name="it.univr.francesco.flickr.view.SearchFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <fragment
            android:id="@+id/detail_fragment"
            android:name="it.univr.francesco.flickr.view.ListFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

    </it.univr.francesco.flickr.view.TabletView>

</FrameLayout>

